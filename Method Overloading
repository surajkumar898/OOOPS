Allow multiple methods with same name, methods must difer in the number or type of parameter
import java.util.Scanner;

class Main {
    public static void show(int balance) {
        System.out.println("Current balance: " + balance);
    }

    public static void show(int balance, int withdrawal) {
        if (withdrawal > balance) {
            System.out.println("Insufficient balance!");
        } else {
            System.out.println("Balance: " + balance);
            System.out.println("Withdrawal: " + withdrawal);
            System.out.println("New balance: " + (balance - withdrawal));
        }
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter current balance: ");
        int balance = sc.nextInt();

        show(balance); // Calls show(int)

        System.out.print("Enter withdrawal amount: ");
        int withdrawal = sc.nextInt();

        show(balance, withdrawal); // Calls show(int, int)

        sc.close();
    }
}

